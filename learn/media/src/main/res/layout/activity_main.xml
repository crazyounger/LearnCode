<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.fuwo.media.MainActivity"
    android:padding="15dp">

    <Button
        android:id="@+id/btn_audio_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:text="音频录制"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_video_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_audio_record"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:text="视频录制"/>


    <Button
        android:id="@+id/btn_weixin_small_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_video_record"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:text="微信小视频"/>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_video_record"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text="开始"
                android:textColor="@android:color/white"
                />

            <Button
                android:id="@+id/btn_end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text="结束"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <SurfaceView
            android:id="@+id/sufaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_audio_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="音频最多可以录制60s"
            android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>
